body {
  font-family: 'Arial', sans-serif;
  color: #575757;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

h1 {
  font-size: 24px;
  margin: 28px;
}

h2 {
  font-size: 20px;
  margin: 0;
}

label {
  display: block;
  margin-bottom: 8px;
  font-size: 14px;
}

input {
  width: 100%;
  max-width: 350px;
  margin: 8px;
  padding: 8px;
  box-sizing: border-box;
  text-align: center;
}

button {
  background-color: #4caf50;
  color: white;
  padding: 10px 15px;
  margin-bottom: 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

button:disabled {
  opacity: 0.75;
  cursor: wait;
}
